@model List<DMPTestProject.Models.RSS_Feed.Content>
@{
    <form method="post" asp-action="Detail">
        <span>Date from: </span><input type="datetime-local" name="DateFrom" value="@ViewData["DateFrom"]"/>
        <span>Date to: </span><input type="datetime-local" name="DateTo" value="@ViewData["DateTo"]"/>
        <input type="submit" value="Filter" />
    </form>
    @foreach (var item in Model)
    {
        <div>
            @if (@item.Url is not null)
            {
                <h4><a href="@item.Url">@item.Title</a> | @item.PubDate</h4>
            }
            else
            {
                <h4>@item.Title | @item.PubDate</h4>
            }
                <p>@item.Description</p>
        </div>
    }
}
